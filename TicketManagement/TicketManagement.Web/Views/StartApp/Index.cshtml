@using Resources

@{
    ViewBag.Title = TicketManagementResource.Welcome;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container jumbotron">
    <div class="row">
        <h1 class="platform-name display-3">@TicketManagementResource.PlatformName</h1>

    </div>
    <div class="row">
        @if (User.Identity.IsAuthenticated)
        {
            <div class="lead welcome col-sm-12">@TicketManagementResource.Welcome @HttpContext.Current.User.Identity.Name</div>
        }
    </div>

    <hr class="my-4">
    <div class="row">
        <p class="platform-description col-lg-12 col-md-6">@TicketManagementResource.PlatformDescription</p>
        @Ajax.ActionLink(TicketManagementResource.Events, "Events", "Event", new { area = "" }, new AjaxOptions { UpdateTargetId = "content", HttpMethod = WebRequestMethods.Http.Get }, new { @class = "btn btn-primary btn-lg col-sm-10 col-md-2" })
    </div>
</div>
