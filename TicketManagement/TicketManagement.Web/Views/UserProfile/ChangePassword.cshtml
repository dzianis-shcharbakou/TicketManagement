@using TicketManagement.Web.Resources
@model TicketManagement.Web.Models.UserProfile.UserPasswordViewModel

<form action="@Url.Action("ChangePassword", new { controller = "UserProfile"})" data-ajax="true" data-ajax-method="POST" method="post" data-form="postForm">
    <div>
        <h4>@TicketManagementResource.ChangePassword</h4>
        <hr />
        @Html.ValidationSummary(false, "", new { @class = "text-danger", data_validation_summary = "validationSummary" })

        <div class="form-group">
            @Html.LabelFor(model => model.OldPassword, htmlAttributes: new { @class = "col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.OldPassword, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.OldPassword, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.PasswordConfirm, htmlAttributes: new { @class = "col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.PasswordConfirm, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PasswordConfirm, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <button type="submit" class="btn btn-primary">@TicketManagementResource.Save</button>
            </div>
        </div>
    </div>

    @LoadingHelper.Loading()
</form>

<div>
    @Ajax.ActionLink(TicketManagementResource.BackToProfile, "Index",
        new { controller = "UserProfile" },
        new AjaxOptions { UpdateTargetId = "content", HttpMethod = WebRequestMethods.Http.Get },
        new { @class = "nav-link" })
</div>

<script>
    $(document).ready(function () {
        postRequest();
    });
</script>